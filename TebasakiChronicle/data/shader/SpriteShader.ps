#version 400

//input
in vec2 outTexCoord;

//output
out vec4 outColor;

//uniform
uniform sampler2D sampler;
uniform vec4 color;

void main(){
	outColor = texture2D(sampler, outTexCoord);
	//outColor = vec4(1.0, 1.0, 1.0, outColor.r);
	if(outColor.a < 0.005){
		discard;
	}
	outColor = outColor * color;
}